<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextNumberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <RadioButton
            android:id="@+id/kaliRadioButton"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Kali"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/bagiRadioButton"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:text="Bagi"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/kurangRadioButton"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:text="Kurang"
            tools:ignore="MissingConstraints" />

        <RadioButton
            android:id="@+id/tambahRadioButton"
            android:layout_width="match_parent"
            android:layout_height="287dp"
            android:text="Tambah"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <EditText
            android:id="@+id/angkakedua"
            android:layout_width="wrap_content"
            android:layout_height="153dp"
            android:hint="Angka Kedua"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

        <EditText
            android:id="@+id/angkapertama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Angka Pertama"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result: 0" />

        <Buttons
            android:id="@+id/calculateButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:onClick="calculateButtonClick" />

        <CheckBox
            android:id="@+id/recordResultCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Result" />

        <ListView
            android:id="@+id/resultListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</RelativeLayout>